ion-list.talk-list
  .item.item-avatar(
    collection-repeat='subscribe in subscribes | filter: filterValid track by $index',
    type='item-text-wrap',
    on-tap="Api.jumpTo(subscribe.clip, chats)",
    collection-item-width="'100%'",
    collection-item-height="64",
    ng-style="{left: 0,right: 0}"
    )
    img.game-logo(ng-if='subscribe["@clip"].gameData.logo' preload-image default-image="img/loading.png" ng-src='{{subscribe["@clip"].gameData.logo?subscribe["@clip"].gameData.logo:""}}')
    .talk-tip
      i.icon.ion-ios-circle-filled.color-r(ng-if="subscribe.unread")
      | {{subscribe["@clip"].content}}
      br
      span {{subscribe['@clip'].lastCommentData.content}}
      br
      small {{subscribe['@clip'].lastCommentUserData.userName}} {{subscribe._modified | timeBefore}}
    span.item-note(ng-class='{first:$first}')
      img(class="orientation-{{subscribe.orientation}}" ng-if="subscribe['@clip'].img['100']" preload-image default-image="img/loading.png" ng-src="{{subscribe['@clip'].img['100']}}")

