  a.item.item-avatar(ng-repeat='clip in clips',type='item-text-wrap',  on-tap="Api.jumpTo(clip._self, 'profile')")
    img(preload-image default-image="img/loading.png" ng-src='{{clip.gameData.logo?clip.gameData.logo:""}}')
    i.icon.ion-ios-circle-filled.color-r(ng-if="subscribe.unread")
    b {{clip.content}} <br>
    | {{clip._modified | date: 'yyyy-MM-dd'}}
    span.item-note(ng-class='{first:$first}')
      img(class="orientation-{{clip.gameData.orientation}}" preload-image default-image="img/loading.png" ng-src="{{clip.img['absUrl']}}")

