ion-modal-view#AddChannel.Pages
  ion-header-bar
    .title 查找游戏
    .buttons
      button.button.button-clear(ng-click='complete()',ng-show="ifAbled == 'able' ") 完成
  ion-content
    ion-list
      a.item.item-avatar(ng-repeat='channel in channels', type='item-text-wrap')
        img(src='{{channel.gameData.logo}}')
        | {{channel.gameData.name}}
        span.item-note(ng-click="followGame(channel)",ng-show="channel.installed == 'Yes' && channel.followed == 'No'")
          | 关注
        span.item-note(ng-click="followGame(channel)",ng-show="channel.installed == 'No'")
          | 下载
