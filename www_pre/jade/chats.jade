ion-view#Chats(view-title='шоишо║')
  ion-content
    ion-refresher(pulling-text=' ', on-refresh='doRefresh()')
    ion-list
      a.item.item-avatar(ng-repeat='subscribe in subscribes',type='item-text-wrap',  ng-click="Api.jumpTo(subscribe.clip, chats)")
        img(src='http://zuju.cc/images/uploads/gaea/jiezoudashi.jpeg')
        i.icon.ion-ios-circle-filled.color-r(ng-if="subscribe.unread")
        b {{subscribe['@clip'].lastCommentUserData.email}} <br>
        | {{subscribe["@clip"].content}} {{subscribe["@clip"]._modified | timeBefore}}
        span.item-note(ng-class='{first:$first}')
          img(src="{{subscribe['@clip'].img['100']}}")
