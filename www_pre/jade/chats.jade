  ion-content(on-infinite-scroll="loadMore")
    ion-refresher(pulling-text=' ', on-refresh='pullRefresh()')
    div(ng-switch="subscribes?1:0")
      div(ng-switch-default)
        ng-include(src="'templates/chat-tempSrc.html'")
