ion-view#Chat(view-title='讨论')
	ion-content(padding='true', start-y='120')
		.chat-top

		ol.messages
			li(ng-repeat='comment in comments', class="{{comment.isOwned?'m-right':''}}")
				.avatar-frame
					img.avatar(src='img/mcfly.jpg')
				.content
					h5.text-overflow A-FUXXXXXXXXXXXXXXXXXXXXXXX
					p {{comment.content}}
	ion-footer-bar
		button.button.button-block.button-positive(ng-if="!hasFollowedPost",ng-click="toggleSubscribe()") 加入讨论
		form
			input(ng-if="hasFollowedPost",type="text",ng-model="formData.content",required,ng-keydown="$event.keyCode === 13 && send();")
