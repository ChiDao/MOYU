ion-view#Chat(view-title='讨论')
	ion-content(han-header='true',padding='true', start-y='120')
		ion-refresher(pulling-text=' ', on-refresh='pullRefresh()')
		.chat-top
		ol.messages
			li(ng-repeat='comment in comments', class="{{comment.isOwned?'m-right':''}}")
				.avatar-frame
					img.avatar(preload-image default-image="img/loading.png" src='{{comment.userLogo}}')
				.content
					h5.text-overflow {{comment.userName}}
					p {{comment.content}}
	ion-footer-bar
		button.button.button-block.button-positive(ng-click="toggleSubscribe()") 加入讨论
		//- button.button.button-block.button-positive(ng-if="!hasFollowedPost",ng-click="toggleSubscribe()") 加入讨论
		form(ng-if="hasFollowedPost")
			input.button-block(type="text",ng-model="formData.content",required,ng-keydown="$event.keyCode === 13 && send();")
