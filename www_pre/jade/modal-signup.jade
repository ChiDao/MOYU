ion-modal-view.Pages
  ion-header-bar.bar
    .title.color-w {{'email'|translate}}
    .buttons
      button.color-bule.button.button-clear(ng-click='mustChoise?cancelModal():closeModal()') {{'cancel'|translate}}
  form(name='signUpForm', novalidate="", ng-submit='ok(signUpForm)')
    ion-content.color-w.dark
      .game-bg.screenHeight
        div.top
          img(src="img/data/soul-clash/logo.png",srcset="img/data/soul-clash/logo@2x.png 2x")
        .black
          .row
            .col
              .input(ng-class="{'has-error': signUpForm.email.$invalid}")
                input.right-arrows(name='email', type='email', placeholder="{{'email_placeholder'|translate}}", ng-model='formData.email', required)
              hr
              div(ng-messages='signUpForm.email.$error', ng-messages-include='templates/form-errors.html')
                p.message.form-error(ng-message='email') {{'email_form'|translate}}
    .page-footer.page-padding
        .row
          .col
            button#buttonOk.a-button.button.main-button.right-arrows(type='submit') {{'next'|translate}}
      