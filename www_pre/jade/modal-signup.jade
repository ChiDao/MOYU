ion-modal-view#Signup.Pages
  ion-header-bar
    .title 手机号码
    .buttons
      button.color-bule.button.button-clear(on-tap='mustChoise?cancelModal():closeModal()') 取消
  form(name='signUpForm', novalidate="", ng-submit='ok(signUpForm)')
    ion-content(ng-class="{'has-error': signUpForm.tel.$invalid}")
      ion-list
        label.item.item-input.item-stacked-label
          span.input-label 手机号码
          input(name='tel', type='number',pattern="[0-9]*", placeholder="请输入您的手机号码", ng-model='formData.tel', ng-minlength='11', ng-maxlength='11',required)

        label.item(ng-messages='signUpForm.tel.$error')
          p.message.form-error(ng-message='required') 手机号码不能为空
          p.message.form-error(ng-message='number') 手机号码均为数字
          p.message.form-error(ng-message='minlength') 手机号码最少11位
          p.message.form-error(ng-message='maxlength') 手机号码最多11位

      .padding
        button.button.button-block.button-positive.activated(type='submit' ng-class="{'disabled':disable}") {{txt}}

